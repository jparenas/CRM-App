{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "types": [
      "webpack-env",
      "jest",
      "reflect-metadata",
      "vuetify"
    ],
    "paths": {
      "@/*": [
        "client/src/*"
      ],
      "@c/*": [
        "common/src/*"
      ],
      "@s/*": [
        "server/src/*"
      ],
      "@root/*": [
        "./*"
      ]
    },
    "lib": [
      "es6",
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "*/src/**/*.js",
    "*/src/**/*.ts",
    "*/src/**/*.tsx",
    "*/src/**/*.vue",
    "*/tests/**/*.ts",
    "*/tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}